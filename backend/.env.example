# ===========================================
# Lion Delivery BOT - Environment Configuration
# ===========================================

# Database (PostgreSQL)
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=lionbot
# Or use DATABASE_URL directly:
# DATABASE_URL=postgresql+asyncpg://postgres:password@localhost/lionbot

# Security
SECRET_KEY=change_this_to_a_very_secure_random_string_minimum_32_characters_long

# ===========================================
# WhatsApp Cloud API Configuration
# ===========================================
# احصل على هذه القيم من: https://developers.facebook.com/
# اتبع الخطوات في ملف WEBHOOK_SETUP.md

# Token للوصول إلى WhatsApp API (استخدم Permanent Token)
WHATSAPP_API_TOKEN=EAAxxxxxxxxxxxxxxxxxxxxx

# معرّف رقم الهاتف (من WhatsApp Configuration)
WHATSAPP_PHONE_NUMBER_ID=123456789012345

# رمز التحقق الخاص بك (اختر أي قيمة - يجب أن تكون نفسها في Meta Console)
WHATSAPP_VERIFY_TOKEN=LionBot2024SecureToken

# معرّف حساب الأعمال
WHATSAPP_BUSINESS_ACCOUNT_ID=987654321098765

# ===========================================
# OpenAI API (للرد الذكي على الطلبات)
# ===========================================
# احصل عليه من: https://platform.openai.com/
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4-turbo-preview

# ===========================================
# Redis Configuration (للـ Cart والـ Sessions)
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
# أو استخدم REDIS_URL مباشرة:
# REDIS_URL=redis://redis:6379

# ===========================================
# Celery (Background Tasks)
# ===========================================
# سيستخدم Redis افتراضياً
# CELERY_BROKER_URL=redis://redis:6379
# CELERY_RESULT_BACKEND=redis://redis:6379

# ===========================================
# Pricing Configuration (إعدادات التسعير)
# ===========================================
BASE_DELIVERY_FEE=2.0
PER_KM_DELIVERY_FEE=0.5
FREE_DELIVERY_THRESHOLD=50.0
DEFAULT_COMMISSION_RATE=0.15
TAX_RATE=0.0

# ===========================================
# Google Maps API (لحساب المسافات - اختياري)
# ===========================================
# GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ===========================================
# First Admin User (يتم إنشاؤه تلقائياً عند التشغيل)
# ===========================================
FIRST_SUPERUSER_EMAIL=admin@lionbot.com
FIRST_SUPERUSER_PASSWORD=admin123
FIRST_SUPERUSER_PHONE=+1234567890

# ===========================================
# Feature Flags
# ===========================================
ENABLE_WHATSAPP_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true

# ===========================================
# Firebase Cloud Messaging (FCM)
# ===========================================
# Get from Firebase Console > Project Settings > Cloud Messaging
FCM_SERVER_KEY=your_fcm_server_key_here
